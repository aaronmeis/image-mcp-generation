{
  "name": "mcp-chart-agent",
  "version": "1.0.0",
  "description": "MCP-based chart generation agent with React SPA",
  "private": true,
  "workspaces": [
    "spa",
    "mcp-server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:spa\"",
    "dev:spa": "npm run dev -w spa",
    "dev:server": "npm run dev -w mcp-server",
    "build": "npm run build -w spa && npm run build -w mcp-server",
    "start": "npm run start -w mcp-server",
    "setup": "npm install && npm run setup -w mcp-server",
    "benchmark": "node scripts/benchmark.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
